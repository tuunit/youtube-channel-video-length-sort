{
    "manifest_version": 3,
    "name": "YouTube Duration Sort",
    "version": "1.0.0",
    "description": "Allows you to sort channel videos by duration.",
    "homepage_url": "https://github.com/tuunit/youtube-duration-sort",
    "icons": {
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "64": "images/icon-64.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png"
    },
    "permissions": [
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "scripts/main.js",
                "scripts/button.js",
                "scripts/sorting.js"
            ]
        }
    ]
}